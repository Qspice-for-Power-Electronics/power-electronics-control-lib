{
	"configurations": [
		{
			"name": "LLVM Clang (IntelliSense)",
			"includePath": [
				"${workspaceFolder}/**",
				"C:/dm/include/**",
				"C:/dm/stlport/stlport/**",
				"C:/Program Files/LLVM/include/**"
			],
			"defines": [
				"_DEBUG",
				"UNICODE",
				"_UNICODE",
				"WIN32",
				"_WIN32",
				"__DMC__",
				"__STDC__",
				"DMC_BOOL_COMPAT"
			],
			"windowsSdkVersion": "10.0.19041.0",
			"compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
			"cStandard": "c11",
			"cppStandard": "c++11",
			"intelliSenseMode": "windows-clang-x64",
			"browse": {
				"path": [
					"${workspaceFolder}/**",
					"C:/dm/include/**",
					"C:/dm/stlport/stlport/**",
					"C:/Program Files/LLVM/include/**"
				],
				"limitSymbolsToIncludedHeaders": false
			}
		},
		{
			"name": "Digital Mars C++ (DMC) - Build Only",
			"includePath": [
				"${workspaceFolder}/**",
				"C:/dm/include/**",
				"C:/dm/stlport/stlport/**"
			],
			"defines": [
				"_DEBUG",
				"UNICODE",
				"_UNICODE",
				"WIN32",
				"_WIN32",
				"__DMC__",
				"__STDC__",
				"DMC_BOOL_COMPAT"
			],
			"windowsSdkVersion": "10.0.19041.0",
			"compilerPath": "C:/dm/bin/dmc.exe",
			"cStandard": "c11",
			"cppStandard": "c++11",
			"intelliSenseMode": "windows-gcc-x86",
			"browse": {
				"path": [
					"${workspaceFolder}/**",
					"C:/dm/include/**",
					"C:/dm/stlport/stlport/**"
				],
				"limitSymbolsToIncludedHeaders": false
			}
		}
	],
	"version": 4
}
