# Editor configuration
root = true

[*]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{cpp,h,def}]
indent_style = space
indent_size = 4

[*.bat]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.gitignore]
indent_style = space
indent_size = 2
